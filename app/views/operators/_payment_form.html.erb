<%= form_for(@payment) do |f| %>
  <% if @payment.errors.any? %>
     <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <ul>
        <% @payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <strong style="font-size: 20px">Left Rs. <%= @customer.products.where(payment_type: 'borrow').sum(:price).to_f - @customer.payments.sum(:payment_ammount).to_f %>
  </strong><br><br>

  <%= f.hidden_field :customer_id, value:@customer.id %>
  <div class="row">
    <div class="col-sm-2">
      <div class="input-group-sm">
        <%= f.text_field :payment_ammount, placeholder: "ðŸ’µ Amount", class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-3">
      <div class="input-group-sm">
        <%= f.text_field :receiver, placeholder: "Receiver", class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="input-group-sm">
        <%= f.text_field :giver, placeholder: "Giver", class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="input-group-sm"><%= f.submit :Save, class: "btn btn-primary" %></div>
    </div>

    <div class="col-sm-1">
      <div class="input-group-sm"><%= link_to "Back", home_index_path, class: "btn btn-info" %></div>
    </div>
  </div>
<% end %>
